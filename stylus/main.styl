ul 
  list-style: none
td 
  padding: 0
  margin: 0
.table__row 
  margin: 0
  padding: 0
  width: 100%
  background: rgb(190, 209, 209)
  &__item
  &__header 
    border: 1px solid rgb(240, 240, 240)
    width: 100%
    &--id
      width: 5em
  &__header 
    background: rgb(240, 240, 240)
  &__item:first-child 
    padding-left: 10px
.btn 
  background: rgb(240, 240, 240)
  text-align: center
  cursor: pointer
  &:hover 
    background: rgb(103, 103, 103)
    color: rgb(242, 243, 252) 
.flatadd
  padding: 0
  margin: 0
  width: 100%
  &:hover 
    font-weight: bold
.object__edit 
  background: rgb(242, 235, 208)
  display: none
  &.edit--active 
    display: table-row
